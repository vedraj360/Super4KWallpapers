<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/materialViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:viewpager_animatedHeaderImage="true"
        app:viewpager_color="@color/colorPrimary"
        app:viewpager_displayToolbarWhenSwipe="false"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_headerAdditionalHeight="10dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_headerHeight="200dp"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="true"
        app:viewpager_imageHeaderDarkLayerAlpha="0.2"
        app:viewpager_logoMarginTop="100dp"
        app:viewpager_pagerTitleStrip="@layout/viewpager_title"
        app:viewpager_parallaxHeaderFactor="1.5"
        app:viewpager_transparentToolbar="false" />


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        android:background="@color/darkg"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav_menu" />


</androidx.drawerlayout.widget.DrawerLayout>